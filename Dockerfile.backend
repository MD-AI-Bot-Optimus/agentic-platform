# Simplified backend-only Dockerfile for Cloud Run
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependencies
COPY pyproject.toml pyproject.toml
RUN pip install --no-cache-dir \
    fastapi>=0.100.0 \
    uvicorn[standard]>=0.23.0 \
    pydantic>=2.0 \
    pydantic-settings>=2.0 \
    pyyaml \
    google-cloud-vision \
    langgraph \
    langchain

# Copy application code
COPY src/ src/
COPY sample_data/ sample_data/

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8003/mcp/tools || exit 1

# Run with dynamic port from environment, defaulting to 8003
CMD ["sh", "-c", "python -m uvicorn src.agentic_platform.api:app --host 0.0.0.0 --port ${PORT:-8003}"]
