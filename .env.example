# Agentic Platform Configuration
# Copy to .env and fill in your values

# ============================================================================
# Google Cloud
# ============================================================================
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GCP_PROJECT_ID=your-project-id
# For Gemini (via AI Studio):
GOOGLE_API_KEY=your-google-api-key

# ============================================================================
# Phase 9: LangGraph - LLM Provider Selection
# ============================================================================
# Choose one or more LLM providers:
# - anthropic (Claude 3.5, 3 Opus)
# - openai (GPT-4, GPT-4 Turbo)
# - google (Gemini 1.5, 2)

# Default model to use (if not specified in request)
LLM_DEFAULT_MODEL=claude-3.5-sonnet

# Or specify individual provider models
# LLM_DEFAULT_MODEL=gpt-4-turbo
# LLM_DEFAULT_MODEL=gemini-1.5-pro

# ============================================================================
# Anthropic (Claude)
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# OpenAI (GPT-4)
# ============================================================================
OPENAI_API_KEY=your-openai-api-key

# ============================================================================
# Google Vertex AI (Gemini)
# ============================================================================
# Uses GOOGLE_APPLICATION_CREDENTIALS above
GOOGLE_VERTEX_LOCATION=us-central1

# ============================================================================
# LangGraph Configuration
# ============================================================================
# Enable/disable LangGraph adapter
LANGGRAPH_ENABLED=true

# Use mock LLM for testing (no API costs)
LANGGRAPH_USE_MOCK_LLM=false

# Maximum iterations for agent loop
LANGGRAPH_MAX_ITERATIONS=10

# Memory backend: "in-memory" or "sqlite"
LANGGRAPH_MEMORY_BACKEND=in-memory

# SQLite database path (if using sqlite memory backend)
LANGGRAPH_MEMORY_DB_PATH=./langgraph_memory.db

# ============================================================================
# Development
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# Enterprise Integration Mock Settings
# ============================================================================
# Knowledge Base Provider: 'mock' (default) or 'enterprise'
KB_PROVIDER=mock

# OCR Provider: 'google' (default) or 'mock'
OCR_PROVIDER=google
